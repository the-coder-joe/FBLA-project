@model FBLA_project.ApplicationModel

<h1>Apply for @Model.Job.Title</h1>
<p>@Model.Job.Text</p>

<form asp-controller="Jobs" asp-action="Application" asp-route-id="@Model.Job.Id" method="post" enctype="multipart/form-data">

    <input asp-for="Application.Name" required/>
    <label asp-for="Application.Name">Name</label>

    <input asp-for="Application.PhoneNumber" equired/>
    <label asp-for="Application.PhoneNumber">Phone Number</label>
    
    <textarea asp-for="Application.Strengths"required />
    <label asp-for="Application.Strengths">What would you consider to be your strengths?</label>
    
    <textarea asp-for="Application.WhyThisJob" required/>
    <label asp-for="Application.WhyThisJob">Why would you like to apply here</label>

    <div class="resume-upload">
            <label asp-for="ResumeFile"></label>
            <input asp-for="ResumeFile" type="file">
            <span asp-validation-for="ResumeFile"></span>
        </div>


    <button type="submit">Apply</button>
</form>
