@model FBLA_project.ProductsModel


@section Scripts {
    <script type="text/javascript" src="~/js/ProductsSripts.js"></script>
}


@section Styles {
    <link rel="stylesheet" href="~/css/ProductStyles.css" />
}

@if (Model.LoginRequired)
{
    <h1 class="header">It is required that you log in in order to make a purchase </h1>
}

@if (Model.PurchaseSuccessful)
{
    <script>alert("Purchase Successful")</script>
}



<h1 class="title">Products</h1>

<div class="card-deck big-box">
    <div class="card card-sizer">
        <div class="card-title">
            <h5 class="wash-title">Touchless</h5>
            <h6 class="price">$7.99</h6>
        </div>
        <div class="card-body">
            <p class="card-text">&nbsp;&nbsp;&nbsp;&nbsp; Our Soft Touch Car Wash is designed to give your vehicle a thorough yet gentle cleaning experience. Using state-of-the-art technology and premium cleaning solutions, this wash ensures a pristine finish without compromising the integrity of your vehicle's paint and surfaces.</p>
        </div>
        <img class="card-img-bottom" src="~/Images/Touchless-istock.webp" />
    </div>

    <div class="card card-sizer">
        <div class="card-title">
            <h5 class="wash-title">Soft Touch</h5>
            <h6 class="price">$13.99</h6>
        </div>
        <div class="card-body">

            <p class="card-text">Indulge your vehicle in the pampering embrace of our Soft Touch Car Wash – an experience where cutting-edge technology meets gentle care. This advanced wash is designed to provide your vehicle with a thorough cleansing, ensuring a pristine finish without compromising its exterior integrity.</p>

        </div>
        <img class="card-img-bottom" src="~/Images/SoftTouch-istock.webp" />
    </div>

    <div class="card card-sizer">
        <div class="card-title">
            <h5 class="wash-title">Manual</h5>
            <h6 class="price">$19.99</h6>
        </div>
        <div class="card-body">
            <p class="card-text">Immerse your vehicle in a distinctive and personalized cleaning affair with our Human-Powered Car Wash – a one-of-a-kind experience where skilled hands replace automated machinery to treat your car to a meticulous and artisanal cleaning.</p>
        </div>
        <img class="card-img-bottom" src="~/Images/Manual-istock.webp" />
    </div>

    <div class="card card-sizer">
        <div class="card-title">
            <h5 class="wash-title">Membership</h5>
            <h6 class="price">$30</h6>
        </div>
        <div class="card-body">
            <p class="card-text">It's our award winning touchless car wash, but up to 5 uses per day! All for the low low price of $30 per month!</p>
            
        </div>
        <button class="membership-btn" onclick="openMembershipDisplay('touchless');">Purchase our car wash</button>
    </div>

    <div class="card card-sizer">
        <div class="card-title">
            <h5 class="wash-title">Membership</h5>
            <h6 class="price">$30</h6>
        </div>
        <div class="card-body">
            <p class="card-text">
                It's our award winning soft touch car wash, but up to 5 uses per day! All for the low low price of $35 per month!
                
            </p>
        </div>
        <button class="membership-btn" onclick="openMembershipDisplay('soft-touch');">Purchase our car wash</button>
    </div>


</div>



<div id="data-modal" class="modal">

    <div class="modal-content">
        <button class="btn-close" onclick="closeModal();"></button>
        <div>
            @if (Model.LoggedIn)
            {
                @using (Html.BeginForm("Products", "Home", FormMethod.Post, new { @class = "zen-form-group", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(m => m.MembershipType, new { @class = "form-input", id = "membership-type" })


                    @Html.LabelFor(m => m.Car.Make, new { @class = "zen-label col-md-2", id = "membership-type" })
                    <div class="">
                        @Html.TextBoxFor(m => m.Car.Make, new { @class = "form-input" })
                        @Html.ValidationMessageFor(m => m.Car.Make)
                    </div>

                    @Html.LabelFor(m => m.Car.Model, new { @class = "zen-label col-md-2", id = "membership-type" })
                    <div class="">
                        @Html.TextBoxFor(m => m.Car.Model, new { @class = "form-input" })
                        @Html.ValidationMessageFor(m => m.Car.Model)
                    </div>

                    @Html.LabelFor(m => m.Car.Color, new { @class = "zen-label col-md-2", id = "membership-type" })
                    <div class="">
                        @Html.TextBoxFor(m => m.Car.Color, new { @class = "form-input" })
                        @Html.ValidationMessageFor(m => m.Car.Color)
                    </div>

                    @Html.LabelFor(m => m.Car.LicensePlate, new { @class = "zen-label col-md-2", id = "membership-type" })
                    <div class="">
                        @Html.TextBoxFor(m => m.Car.LicensePlate, new { @class = "form-input" })
                        @Html.ValidationMessageFor(m => m.Car.LicensePlate)
                    </div>
                    <input type="submit" value="Submit" class="submit" class="btn-default" style="background-color: green;" />
                }
            }
            else
            {
                <h1 class="header">In order to make a purchase, please <a asp-controller="Home" asp-action="Login">Login</a></h1>
            }

        </div>
    </div>

</div>

