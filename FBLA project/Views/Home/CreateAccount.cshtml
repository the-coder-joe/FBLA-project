@model FBLA_project.AccountCreationModel
@section Styles {
    <link rel="stylesheet" href="/css/LoginStyles.css">
}

@{ 
 
}

<h1 class="title"> Sign Up</h1>
@using (Html.BeginForm("CreateAccount", "Home", FormMethod.Post, new { @class = "zen-form-group", role = "form" }))
{
    @Html.AntiForgeryToken()

    @Html.LabelFor(m => m.UnprotectedInfo.Name, htmlAttributes: new { @class = "zen-label col-md-2" })
    <div class="">
        @Html.TextBoxFor(m => m.UnprotectedInfo.Name, new { @class = "form-input" })
        @Html.ValidationMessageFor(m => m.UnprotectedInfo.Name)
    </div>

        @Html.LabelFor(m => m.UnprotectedInfo.Username, htmlAttributes: new { @class = "zen-label col-md-2" })
        <div class="">
            @Html.TextBoxFor(m => m.UnprotectedInfo.Username, new { @class = "form-input" })
            @Html.ValidationMessageFor(m => m.UnprotectedInfo.Username)
        </div>


        @Html.LabelFor(m => m.Password, htmlAttributes: new { @class = "zen-label col-md-2" })
        <div class="">
            @Html.PasswordFor(m => m.Password, new { @class = "form-input" })
            @Html.ValidationMessageFor(m => m.Password)
        </div>

    @Html.LabelFor(m => m.ConfirmPassword, htmlAttributes: new { @class = "zen-label col-md-2" })
    <div class="">
        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-input" })
        @Html.ValidationMessageFor(m => m.ConfirmPassword)
    </div>

    @Html.LabelFor(m => m.UnprotectedInfo.Email, htmlAttributes: new { @class = "zen-label col-md-2" })
    <div class="">
        @Html.TextBoxFor(m => m.UnprotectedInfo.Email, new { @class = "form-input" })
        @Html.ValidationMessageFor(m => m.UnprotectedInfo.Email)
    </div>

    @Html.LabelFor(m => m.UnprotectedInfo.Gender, htmlAttributes: new { @class = "zen-label col-md-2" })
    <div class="">
        @Html.TextBoxFor(m => m.UnprotectedInfo.Gender, new { @class = "form-input" })
        @Html.ValidationMessageFor(m => m.UnprotectedInfo.Gender)
    </div>




            <button type="submit" class="btn btn-default">Create Account</button>

    @if (!( Model?.Message is null ))
    {

        <div class="zen-label">@Model?.Message</div>
    }

}
