@model FBLA_project.AccountCreationModel
@section Styles {
    <link rel="stylesheet" href="/css/LoginStyles.css">
}


@using (Html.BeginForm("CreateAccount", "Home", FormMethod.Post, new { @class = "form-group", role = "form" }))
{
    @Html.AntiForgeryToken()

        @Html.LabelFor(m => m.Username, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="">
            @Html.TextBoxFor(m => m.Username, new { @class = "form-input" })
            @Html.ValidationMessageFor(m => m.Username)
        </div>


        @Html.LabelFor(m => m.Password, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="">
            @Html.PasswordFor(m => m.Password, new { @class = "form-input" })
            @Html.ValidationMessageFor(m => m.Password)
        </div>

    @Html.LabelFor(m => m.Name, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="">
        @Html.TextBoxFor(m => m.Name, new { @class = "form-input" })
        @Html.ValidationMessageFor(m => m.Name)
    </div>
            <button type="submit" class="btn btn-default">Login</button>
}

@if (Model?.Message is not null)
{
    
<h2>@Model?.Message</h2>
}